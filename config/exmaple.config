server 
{
    host = 0.0.0.0;
    port = 8080;
    server_name = mysite.com www.mysite.com;
    #port = 1010;
    client_max_body_size = 5
    error_page 404 /404.html;
    error_page 500 /500.html;
    route /image
    {
        methods = GET;
        root = /home/ajabri/Desktop/websrv/www;
        directory_listing = off;
    }
    route /
    {
        methods = GET;
        root = /home/ajabri/Desktop/websrv/www/index.html;
        directory_listing = off;
    }
    route /videos     
    {
        methods = GET; #here comment
        root = /var/www/videos;
        directory_listing = on;
    }

    route /old-page {
        methods = GET POST DELETE
        redirect = http://youtube.com/;
    }
}

server
{
    host = 127.0.0.1;
    port = 8081;
    server_name = mysite.com www.mysite.com;

    client_max_body_size = 2M;
    error_page 403 /403.html;

    route /admin {
        methods = GET POST DELETE;
        root = /var/www/admin;
        directory_listing = on;
    }
}
