server
{
    host = 0.0.0.0;
    port = 8080;
    server_name = test;
    client_max_body_size = 1M;
    
    route /
    {
        methods = GET POST DELETE;
        root = ./www;
        directory_listing = off;
        indexfile = index.html;
    }
    
    route /uploads
    {
        methods = GET POST DELETE;
        root = ./uploads;
        upload_path = ./uploads;
        directory_listing = on;
    }
}
